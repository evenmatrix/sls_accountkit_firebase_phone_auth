{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
